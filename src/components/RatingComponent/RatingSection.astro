---
import { Image } from "astro:assets";
import googleLogo from "../../assets/logos/google_text.webp";
import tripadvisorLogo from "../../assets/logos/tripadvisor_logo.png";
import RatingCard from "./RatingCard.astro";

const {sectionTitle} = Astro.props;
---

<section class="pt-4 pb-8">
	<h2 class="text-2xl sm:text-4xl md:text-4xl lg:text-5xl xl:text-6xl font-bold animate-pulse text-center">{sectionTitle}</h2>
  <div class="flex flex-col md:flex-row md:justify-around items-center pt-10 space-y-4 md:space-y-0 md:space-x-6">
    <RatingCard reviews={900} rating={"5.0"} imageSrc={googleLogo} orderNum={"5"} />
    <RatingCard reviews={900} rating={"5.0"} imageSrc={tripadvisorLogo} orderNum={"6"} />
  <link href="https://awards.infcdn.net/2024/r_gold.css" rel="stylesheet"/><div id="b-gold" onclick="if(event.target.nodeName.toLowerCase() != 'a') {window.open(this.querySelector('.b-gold_r-link').href);return 0;}"> <a href="https://es.restaurantguru.com/King-Of-Judah-Reggae-Bar-Santa-Cruz-de-Tenerife" class="b-gold_r-link" target="blank">King of Judah Cocktails Reggae Bar</a> <p class="b-gold_center">Recomendado</p> <a href="https://restaurantguru.com" class="b-gold_link" target="_blank">Restaurant Guru</a> <p class="b-gold_year">2025</p></div>
  </div>
</section>
