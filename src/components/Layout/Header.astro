---
const {flagImg,flagImgP1,flagImgP2,currentLang, homeTxt, contactTxt, cocktailsTxt} = Astro.props;
import Image from "astro/components/Image.astro";
import logo from '../../assets/logos/koj_logo.png';
---

<header class="navbar bg-base-100 shadow-sm sticky top-0 z-50 px-4">
  <div class="flex-1">
    <a href={currentLang + '/'}><Image src={logo} alt="Logo" class="w-10"></Image></a>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <li><a href={'/'+currentLang + '/'} >{homeTxt}</a></li>
      <li><a href={'/'+currentLang + '/cocktails'}>{cocktailsTxt}</a></li>
      <li><a href={'/'+currentLang + '/contact'}>{contactTxt}</a></li>

      <li>
        <details>
          <summary><Image src={flagImg} alt="Language Selector Flag" class="w-8"></Image></summary>
          <ul class="bg-base-100 rounded-t-none p-2">
            <li><a href="/es"><Image src={flagImg} alt="Language Selector Flag" class="w-8"></Image></a></li>
            <li><a href="/en"><Image src={flagImgP1} alt="Language Selector Flag" class="w-8"></Image></a></li>
            <li><a href="/fr"><Image src={flagImgP2} alt="Language Selector Flag" class="w-8"></Image></a></li>
          </ul>
        </details>
      </li>
    </ul>
  </div>
</header>
<style>
  li{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: 600;
    font-size: 16px;
  }
</style>