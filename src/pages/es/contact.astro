---
import Header from "../../components/Layout/Header.astro";
import Layout from "../../layouts/Layout.astro";
import flag from "../../assets/flags/esp.svg";
import flagP1 from "../../assets/flags/eng.svg";
import flagP2 from "../../assets/flags/fr.svg";

const headerSection = {
	flagImg: flag,
	flagImgP1: flagP1,
	flagImgP2: flagP2,
	currentLang: "es",
	homeTxt: "Inicio",
	cocktailsTxt: "Cócteles",
	contactTxt: "Contacto",
};

const sectionTitle = "Donde Encontrarnos";
---

<Layout>
	<Header
		flagImg={flag}
		flagImgP1={flagP1}
		flagImgP2={flagP2}
		currentLang={headerSection.currentLang}
		homeTxt={headerSection.homeTxt}
		cocktailsTxt={headerSection.cocktailsTxt}
		contactTxt={headerSection.contactTxt}
	/>
	<section
		class="h-full py-12 bg-linear-to-br from-green-950 via-yellow-900 to-red-900"
	>
		<h1
			class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold animate-pulse text-center"
		>
			{sectionTitle}
		</h1>
		<div class="h-full flex justify-around pt-10">
			<div class="bg-blue-600 w-2/5 h-full p-10">placeholder mapa</div>


			<div class="bg-black/20  w-2/5 p-10 font-semibold rounded-2xl sm:text-xl md:text-xl lg:text-2xl xl:text-2xl">
        <h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold pb-2">Dirección </h2>
        <p>Calle la calle n1, Los Cristianos </p>
        <h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold pt-10 pb-2">Horario</h2>
        <p>Lunes - Sábado <span class="animate-pulse">21:30 a 2:00</span></p>
        <p class="opacity-80">Domingo cerrado</p>

      </div>
		</div>
	</section>
</Layout>
